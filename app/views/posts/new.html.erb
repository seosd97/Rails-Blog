<div class="root_new_post">
    <div class="new_post_container">
        <h1>New Post</h1>

        <% if @post.errors.any? %>
            <div class="errors_desc">
                <h2>You've got <%= pluralize(@post.errors.count, "error") %></h2>
                <ul>
                    <% @post.errors.full_messages.each do |err| %>
                        <li><%= err %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <%= form_with model: @post do |f| %>
            <div class="new_post_edit_content">
                <%= f.text_field :title, class: "new_post_edit_field field_title", placeholder: "Enter Title" %>
                <%= f.text_area :description, class: "new_post_edit_field field_desc", placeholder: "Enter Description in markdown format" %>
            </div>
            
            <%= f.submit "submit", class: "new_post_submit" %>
        <% end %>
    </div>
</div>