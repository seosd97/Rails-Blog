<div class="root_new_post">
    <h1>New Post</h1>

    <% if @post.errors.any? %>
        <div class="errors_desc">
            <h2>You've got <%= pluralize(@post.errors.count, "error") %></h2>
            <ul>
                <% @post.errors.full_messages.each do |err| %>
                    <li><%= err %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= form_with model: @post, local: true do |f| %>
        <b>Writer : </b>
        <%= f.text_field :user_name, class: "filed_user_name" %>

        <b>Title : </b>
        <%= f.text_field :title, class: "field_title" %>

        <b>desc : </b>
        <%= f.text_area :description, class: "field_desc" %>
        
        <%= f.submit "submit", class: "submit_new_post" %>
    <% end %>
</div>