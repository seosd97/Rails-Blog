<ul class="post-list-container">
    <% @posts.each do |post| %>
        <li class="post-list-element">
            <%= link_to post_path(post) do %>
                <strong class="post-list-title"><%= post.title %></strong>
                <p class="post-list-desc">
                    <%= parse_md_strip_down(post.description) %>
                </p>
            <% end %>

            <ul class="post-list-info">
                <li>
                    <%= post.created_at.in_time_zone("Asia/Seoul").strftime("%F") %>
                </li>
                <li>
                    <%= image_tag 'icons/visitor.png', size: '13x13', align: 'center' %>
                    <%= post.visitor_count %>
                </li>
            </ul>
        </li>
    <% end %>
</ul>