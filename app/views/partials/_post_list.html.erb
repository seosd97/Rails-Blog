<ul class="post-container">
    <% @posts.each do |post| %>
        <li>
            <%= link_to get_post_path(post) do %>
                <h2 class="post-title"><%= post.title %></h2>
            <% end %>
            <div class="post-info">
                <%= post.owner %></br>
                <%= post.created_at.in_time_zone("Asia/Seoul").strftime("%F") %></br>
                <%= image_tag 'icons/visitor.png', size: '13x13', align: 'center' %>
                <%= post.visitor_count %>
            </div>
        </li>
    <% end %>
</ul>