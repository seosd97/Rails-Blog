<div class="root-admin-login">
    <h1>Sign In</h1>

    <% flash.each do |key, value| %>
        <div class="notice-area #{key}">
            <%= value %>
        </div>
    <% end %>

    <div class="container-admin-login">
        <%= form_with url: admin_login_path do |f| %>
            <label>User Name</label>
            <%= f.text_field :name, class: "login-form-field" %></br>
            <label>Password</label>
            <%= f.password_field :password, class: "login-form-field" %>
            <%= f.submit "login", class: "login-submit" %>
        <% end %>
    </div>
</div>